<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0-windows</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Resources\characters.frag" />
      <EmbeddedResource Include="Resources\characters.frag" />
      <None Remove="Resources\characters.geom" />
      <EmbeddedResource Include="Resources\characters.geom" />
      <None Remove="Resources\characters.vert" />
      <EmbeddedResource Include="Resources\characters.vert" />
      <None Remove="Resources\font.png" />
      <EmbeddedResource Include="Resources\font.png" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="OpenTK" Version="5.0.0-pre.13" />
      <PackageReference Include="System.Drawing.Common" Version="9.0.1" />
    </ItemGroup>

</Project>
